// Prisma schema for VetaFoodBeta settings module

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  roles     CompanyRole[]
}

model Permission {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  module    String
}

model CompanyRole {
  id        String   @id @default(cuid())
  companyId String
  name      String

  company     Company                 @relation(fields: [companyId], references: [id])
  permissions CompanyRolePermission[]
  users       User[]
}

model CompanyRolePermission {
  companyRoleId String
  permissionId  String
  @@id([companyRoleId, permissionId])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  companyId String
  roleId    String?

  pinHash      String?
  pinEnabled   Boolean  @default(false)
  pinUpdatedAt DateTime?

  company    Company         @relation(fields: [companyId], references: [id])
  role       CompanyRole?    @relation(fields: [roleId], references: [id])
  grants     UserPermissionGrant[]
  denies     UserPermissionDeny[]
}

model UserPermissionGrant {
  userId       String
  permissionId String
  @@id([userId, permissionId])
}

model UserPermissionDeny {
  userId       String
  permissionId String
  @@id([userId, permissionId])
}
